@model Teko.Diary.Models.TagAssignment

@{
    ViewData["Title"] = "Delete";
}

<h1>Löschen</h1>

<h3>Dieses Tagebuch wirklich löschen?</h3>
<div>
    <h4>TagAssignment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tag.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Entry)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Entry.Text)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück</a>
    </form>
</div>
